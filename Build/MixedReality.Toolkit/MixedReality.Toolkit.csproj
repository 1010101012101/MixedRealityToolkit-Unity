<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(MRTKRoot)\Assets\MixedRealityToolkit\**\*.cs" />
    <Content Include="$(MRTKRoot)\Assets\MixedRealityToolkit\_Core\Resources\**\*">
      <PackagePath>%(RelativeDir)</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <Content Include="$(MRTKRoot)\Assets\MixedRealityToolkit\_Core\Inspectors\Profiles\*.cs">
      <PackagePath>%(RelativeDir)</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(UnityEngineDll)" />
    <Reference Include="$(UnityEditorDll)" />
    <Reference Include="$(UnityEngineUIExtensionDll)" />
  </ItemGroup>

</Project>
